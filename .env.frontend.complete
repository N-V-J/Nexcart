# =============================================================================
# NexCart Frontend Environment Variables - Complete Configuration
# =============================================================================

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Backend API URL - Replace with your actual backend URL
VITE_API_URL=https://nexcart-backend.onrender.com/api

# Alternative API URLs for different environments
# VITE_API_URL=http://localhost:8000/api                    # Local development
# VITE_API_URL=https://your-custom-domain.com/api          # Custom domain

# =============================================================================
# STRIPE PAYMENT CONFIGURATION
# =============================================================================
# Stripe Publishable Key (starts with pk_)
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_publishable_key_here

# Alternative Stripe keys for different environments
# VITE_STRIPE_PUBLIC_KEY=pk_test_...                        # Test environment
# VITE_STRIPE_PUBLIC_KEY=pk_live_...                        # Production environment

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application name displayed in the UI
VITE_APP_NAME=NexCart

# Application description
VITE_APP_DESCRIPTION=Modern E-Commerce Platform

# Application version
VITE_APP_VERSION=1.0.0

# Application environment
VITE_APP_ENV=production

# =============================================================================
# BRANDING & UI CONFIGURATION
# =============================================================================
# Primary brand color
VITE_PRIMARY_COLOR=#1890ff

# Secondary brand color
VITE_SECONDARY_COLOR=#52c41a

# Application logo URL
VITE_LOGO_URL=/logo.png

# Favicon URL
VITE_FAVICON_URL=/favicon.ico

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
VITE_ENABLE_CART=true
VITE_ENABLE_WISHLIST=true
VITE_ENABLE_REVIEWS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_PWA=false

# =============================================================================
# ANALYTICS & TRACKING
# =============================================================================
# Google Analytics ID
VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Facebook Pixel ID
VITE_FB_PIXEL_ID=your_facebook_pixel_id

# Hotjar Site ID
VITE_HOTJAR_ID=your_hotjar_id

# =============================================================================
# SOCIAL MEDIA & EXTERNAL LINKS
# =============================================================================
# Social media links
VITE_FACEBOOK_URL=https://facebook.com/nexcart
VITE_TWITTER_URL=https://twitter.com/nexcart
VITE_INSTAGRAM_URL=https://instagram.com/nexcart
VITE_LINKEDIN_URL=https://linkedin.com/company/nexcart

# Support links
VITE_SUPPORT_EMAIL=support@nexcart.com
VITE_SUPPORT_PHONE=+1-234-567-8900

# =============================================================================
# SEO & META CONFIGURATION
# =============================================================================
# Default meta title
VITE_META_TITLE=NexCart - Modern E-Commerce Platform

# Default meta description
VITE_META_DESCRIPTION=Shop the latest products with NexCart, your modern e-commerce destination

# Meta keywords
VITE_META_KEYWORDS=ecommerce,shopping,online store,products

# Open Graph image
VITE_OG_IMAGE=https://nexcart-frontend.onrender.com/og-image.jpg

# =============================================================================
# API ENDPOINTS CONFIGURATION
# =============================================================================
# Specific API endpoints (if different from base API URL)
VITE_AUTH_ENDPOINT=/auth
VITE_PRODUCTS_ENDPOINT=/products
VITE_ORDERS_ENDPOINT=/orders
VITE_USERS_ENDPOINT=/users
VITE_CART_ENDPOINT=/cart
VITE_CATEGORIES_ENDPOINT=/categories

# =============================================================================
# PERFORMANCE & OPTIMIZATION
# =============================================================================
# Enable service worker
VITE_ENABLE_SW=false

# API request timeout (in milliseconds)
VITE_API_TIMEOUT=30000

# Image optimization
VITE_ENABLE_IMAGE_OPTIMIZATION=true
VITE_IMAGE_QUALITY=80

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
# Enable debug mode (only for development)
VITE_DEBUG=false

# Enable console logs
VITE_ENABLE_LOGS=false

# Enable Redux DevTools
VITE_ENABLE_REDUX_DEVTOOLS=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Content Security Policy
VITE_CSP_ENABLED=true

# Enable HTTPS redirect
VITE_FORCE_HTTPS=true

# =============================================================================
# LOCALIZATION
# =============================================================================
# Default language
VITE_DEFAULT_LOCALE=en

# Available languages
VITE_AVAILABLE_LOCALES=en,es,fr,de

# Currency settings
VITE_DEFAULT_CURRENCY=USD
VITE_CURRENCY_SYMBOL=$

# For Indian Rupee (as per your preference)
# VITE_DEFAULT_CURRENCY=INR
# VITE_CURRENCY_SYMBOL=â‚¹

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Map service API key (for store locator)
VITE_MAPS_API_KEY=your_google_maps_api_key

# Chat service (if integrated)
VITE_CHAT_WIDGET_ID=your_chat_widget_id

# Email service
VITE_EMAIL_SERVICE_ID=your_email_service_id

# =============================================================================
# RENDER DEPLOYMENT SPECIFIC
# =============================================================================
# Node environment
NODE_ENV=production

# Build output directory
VITE_BUILD_DIR=dist

# Public path
VITE_PUBLIC_PATH=/

# =============================================================================
# OPTIONAL: CUSTOM DOMAIN CONFIGURATION
# =============================================================================
# If using custom domain, update these
# VITE_DOMAIN=your-custom-domain.com
# VITE_API_URL=https://api.your-custom-domain.com/api
# VITE_CDN_URL=https://cdn.your-custom-domain.com
